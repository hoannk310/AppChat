<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="#fff"
    app:contentPadding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_cmt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/profile_image" />

        <TextView
            android:id="@+id/tv_name_cmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/avatar_cmt"
            android:text="hihih"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_cmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_cmt"
            android:layout_toEndOf="@id/avatar_cmt"
            android:layout_toRightOf="@id/avatar_cmt"
            android:text="hihi"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_time_cmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cmt"
            android:layout_toEndOf="@id/avatar_cmt"
            android:layout_toRightOf="@id/avatar_cmt"
            android:text="10/10/2101" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>